# spark_backend Local Development Configuration (Codespace)
# Variables like ${SECRET_KEY} are substituted by setup.sh

# Local MySQL (Docker)
AWS_DATABASE_URL=mysql2://root:root@127.0.0.1:3306/SPARK?reconnect=true
AWS_DB_PASSWORD=root
AWS_DB_USERNAME=root

# AWS Region
AWS_REGION=US East (Ohio)

# Bundle config
BUNDLER_DEPLOYMENT_MODE=false
BUNDLE_WITHOUT=
CONNECTION_POOL_SIZE=10

# Rails environment
RACK_ENV=development
RAILS_ENV=development
RAILS_MAX_THREADS=32
RAILS_MIN_THREADS=8
RAILS_SERVE_STATIC_FILES=enabled
RAILS_SKIP_ASSET_COMPILATION=false
RAILS_SKIP_MIGRATIONS=false
RAILS_WORKERS=2

# Rails secrets (generated at setup time)
SECRET_KEY_BASE=${SECRET_KEY}
SECRET_TOKEN=${SECRET_KEY}

# SparkPos integration
SPARK_POS_API_KEY=dev-spark-pos-api-key-123

# URLs
environment_name=Codespace
environment_url=localhost:3000
file_server_url=http://localhost:3000
root_url=http://localhost:3000

# Email (disabled for local dev)
EMAIL_PARSER_SUFFIX=@devmail.ordercosmic.com
EMAIL_SAFE_REDIRECT=

# Optional services (empty = disabled)
DD_AGENT_HOST=
DD_API_KEY=
MAILGUN_DOMAIN=
MAILGUN_FROM_EMAIL=
MAILGUN_PORT=
MAILGUN_PWD=
MAILGUN_USER=
MATOMO_URL=
PUBNUB_PUBLISH_KEY=
PUBNUB_SECRET_KEY=
PUBNUB_SUBSCRIBE_KEY=
S3_ACCESS_KEY_ID=
S3_BUCKET=
S3_SECRET_ACCESS_KEY=
clover_client_id=
clover_url=https://sandbox.dev.clover.com
error_email=
google_maps_key=
incident_io_token=
twilio_phone_number=
twilio_sid=
twilio_token=
