{
  "name": "Spark Dev Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-20.04",
  "features": {
    "ghcr.io/devcontainers/features/ruby:1": { "version": "3.0.5" },
    "ghcr.io/devcontainers/features/java:1": { "version": "21", "installMaven": true },
    "ghcr.io/devcontainers/features/node:1": { "version": "22" },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {}
  },
  "forwardPorts": [3000, 8080, 8081, 3306, 27017, 54321, 54322, 54323],
  "portsAttributes": {
    "3000": { "label": "Rails", "onAutoForward": "notify", "visibility": "public" },
    "8080": { "label": "PowerSync", "onAutoForward": "silent", "visibility": "public" },
    "8081": { "label": "Metro", "onAutoForward": "silent", "visibility": "public" },
    "27017": { "label": "MongoDB", "onAutoForward": "silent" },
    "54321": { "label": "Supabase API", "onAutoForward": "silent", "visibility": "public" },
    "54322": { "label": "Supabase DB", "onAutoForward": "silent", "visibility": "public" },
    "54323": { "label": "Supabase Studio", "onAutoForward": "notify", "visibility": "public" }
  },
  "customizations": {
    "vscode": {
      "extensions": ["rebornix.ruby", "vscjava.vscode-java-pack"]
    },
    "codespaces": {
      "repositories": {
        "Spark-Ordering/spark_backend": {
          "permissions": "read-write"
        },
        "Spark-Ordering/RequestManager": {
          "permissions": "read-write"
        },
        "carlosdelivery/SparkPos": {
          "permissions": "read-write"
        }
      }
    }
  }
}
